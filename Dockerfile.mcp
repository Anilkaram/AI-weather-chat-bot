FROM python:3.11-slim

WORKDIR /app

# Set timezone
ENV TZ=Asia/Kolkata
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

# Install dependencies
RUN pip install fastapi uvicorn requests python-multipart pytz

# Copy source files
COPY weather_server_http.py server.py timezone_debug.py TIMEZONE_HELP.md ./

# Expose port
EXPOSE 3001

# Make entry script executable
RUN chmod +x server.py

# Run the server with the entry script for better error handling
CMD ["python", "server.py"]
